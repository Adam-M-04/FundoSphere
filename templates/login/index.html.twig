{% extends 'base.html.twig' %}

{% block title %}Login!{% endblock %}

{% block body %}
    <section class="d-flex justify-content-center align-items-center text-light mt-4">
        <section class="glassy-background m-3 p-4 container" style="max-width: 500px;">
            <h1 class="display-1 text-center text-light">Login</h1>

            {% if error %}
                <div class="text-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <form action="{{ path('app_login') }}" method="post">
                <label for="username" class="form-label">Username:</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}"
                    class="form-control mb-3" placeholder="Enter username">

                <label for="password" class="form-label">Password:</label>
                <input type="password" id="password" name="_password" class="form-control mb-3"
                       placeholder="Enter password">

                <button type="submit" class="form-control btn btn-success">login</button>
            </form>
        </section>
    </section>
{% endblock %}
